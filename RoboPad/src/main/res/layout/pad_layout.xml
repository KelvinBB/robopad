<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pad_size"
    android:layout_height="@dimen/pad_size" >

    <ImageView
        android:id="@+id/robot_bg"
        android:layout_width="@dimen/pad_bot_icon_size"
        android:layout_height="@dimen/pad_bot_icon_size"
        android:layout_centerInParent="true"
        android:src="@drawable/pollywog_bg_off"/>

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/green_circle_btn_transparent_selector"
        android:scaleType="center"
        android:padding="@dimen/button_press_padding"
        android:src="@drawable/left_button" />

    <ImageButton
        android:id="@+id/up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_press_padding"
        android:background="@drawable/green_circle_btn_transparent_selector"
        android:src="@drawable/up_button" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/button_press_padding"
        android:background="@drawable/green_circle_btn_transparent_selector"
        android:src="@drawable/right_button" />

    <ImageButton
        android:id="@+id/down_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/button_press_padding"
        android:background="@drawable/green_circle_btn_transparent_selector"
        android:src="@drawable/down_button" />

</RelativeLayout>