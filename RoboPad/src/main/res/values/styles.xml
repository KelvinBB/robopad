<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="green_button">
        <item name="android:background">@drawable/green_button_btn_default_holo_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="green_button_large" parent="green_button">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>
    
    <style name="green_button_large.connect_button">
        
        <item name="android:text">@string/connect</item>
    </style>
    
    <style name="green_button_large.disconnect_button">
        <item name="android:text">@string/disconnect</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>