<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoboPad" >

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/holo_green_light"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/select_bot_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:onClick="onSelectBotButtonClick"
            android:padding="-2dp"
            android:src="@drawable/robot_icon" />

        <ImageView
            android:id="@+id/pad_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/holo_green_dark"
            android:onClick="onSelectBotButtonClick"
            android:padding="4dp"
            android:src="@drawable/pad_icon"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/holo_green_light" >

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:src="@drawable/bq_logo" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/game_pad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/title_layout"
        android:layout_below="@id/navigation_bar" />

</RelativeLayout>